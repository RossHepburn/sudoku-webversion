<html>
	<head>
		<title>Sudoku Game</title>
		<!-- link to the CSS stylesheet -->
		<link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
	</head>
	<body>
		<div class="SupermanFlying">
			<img src="../images/SupermanFlying.gif">
		</div>
		<div class="clear">
		</div>
		<h1>Superdoku</h1>
		<div id="flash">
			<%= flash[:notice] %>
		</div>
		<div id="sudoku">
			<form action="/" method="post">
				<!-- one div for each row -->
				<% 3.times do |row| %>
				<div class='row'>
					<!-- we want to create separate div elements for boxes to style them using CSS -->
					<% 3.times do |box| %>
					<div class="box">
						<!-- each box will have nine cells -->
						<% 3.times do |cell_row| %>
						<div class="cell-row">
							<% 3.times do |cell| %>
							<%= partial :cell, :locals=>{:cell_index => row*27+box*3+cell_row*9+cell}%>
							<% end %>
						</div>
						<% end %>
					</div>
					<% end %>
				</div>
				<% end %>
				<button>Check solution</button>
		<button name="save" value="true">Save Game</button>
		<button name="reset" value="true">Reset Game</button>
	</form>
	<form action="/solution" method="get"><button>Show Solution</button></form>
</div>

<h3>New Game</h3>
<div class="new-game">
	<form action="/set" method="post">
		<button name="difficulty" value="easy">Easy Puzzle</button>
		<button name="difficulty" value="medium">Medium Puzzle</button>
		<button name="difficulty" value="hard">Hard Puzzle</button>
	</form>
	<form action="/help" method="get">
		<button>How to Play</button>
	</form>
</div>
			</form>
		</div>
	</body>
</html>